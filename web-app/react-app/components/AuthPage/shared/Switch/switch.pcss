.root {
  position: relative;
  transition: 0.2s ease-out height;

  a {
    pointer-events: none;
  }
}

.switchable {
  left: 0;
  opacity: 0;
  position: absolute;
  top: 0;
  transition: 200ms cubic-bezier(0.0, 0, 0.2, 1);
  transition-delay: 0s, 200ms;
  transition-property: opacity, visibility;
  visibility: hidden;
  width: 100%;
}

.active {
  opacity: 1;
  position: relative;
  transition-delay: 0s, 0s;
  visibility: visible;

  a {
    pointer-events: auto;
  }
}
