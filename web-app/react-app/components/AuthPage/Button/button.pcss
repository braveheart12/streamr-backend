.button {
    background: #0324FF;
    border: 0;
    border-radius: 2px;
    color: white;
    cursor: pointer;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.875em;
    font-weight: 600;
    line-height: 3em;
    outline: 0 !important;
    padding: 0 2em;
    text-align: center;
    text-transform: uppercase;
}
