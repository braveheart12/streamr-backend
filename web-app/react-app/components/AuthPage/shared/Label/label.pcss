.level {
  left: 0;
  opacity: 0;
  position: absolute;
  top: 0;
  transition: 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
  transition-property: opacity, visibility;
  transition-delay: 0s, 200ms;
  visibility: hidden;
  width: 100%;
}

.active {
  opacity: 1;
  position: relative;
  transition-delay: 0s, 0s;
  visibility: visible;
}

.weak {
  color: #FF0F2D;
}

.moderate {
  color: #F9CF0D;
}

.strong {
  color: #2AC437;
}
